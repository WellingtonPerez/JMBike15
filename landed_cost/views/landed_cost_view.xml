<odoo>

    <record model="ir.ui.view" id="landed_cost.landed_cost_form_inherit">
        <field name="name">stock.landed.cost.form.inherit</field>
        <field name="model">stock.landed.cost</field>
	<field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
	<field name="arch" type="xml">
	   <xpath expr="//page[@name='valuation_adjustments']" position="after">
             <page name="matrix_costos" string="Matriz de Costos"> 
               <!--
		<field name="valuation_adjustment_lines" position="after">
		    -<div class="oe_clear"/>
		<separator class="text-danger" string="Información por producto"/> -->
                <field name="product_detail_ids">
                    <form string="Lineas de información">
                        <group>
                            <group>
                                <field name="product_id" readonly="1"/>
                                <field name="product_tmpl_id" invisible="1"/>
                                <field name="quantity" readonly="1"/>
                            </group>
                            <group>
                                <field name="old_cost" widget="monetary" readonly="1"/>
                                <field name="actual_cost" widget="monetary" readonly="1"/>
                                <field name="old_price" widget="monetary" readonly="1"/>
                                <field name="additional_cost" widget="monetary" readonly="1"/>
                                <field name="new_cost" widget="monetary" readonly="1"/>
                                <field name="list_price" widget="monetary" readonly="0"/>
                            </group>
                        </group>
                    </form>
                    <tree editable="bottom" create="0" >
                        <field name="product_id" readonly="1"/>
                        <field name="quantity" readonly="1"/>
                        <field name="old_cost" widget="monetary" readonly="1"/>
                        <field name="old_price" widget="monetary" readonly="1"/>
                        <field name="actual_cost" widget="monetary" readonly="1"/>
                        <field name="additional_cost" widget="monetary" readonly="1"/>
                        <field name="new_cost" widget="monetary" readonly="1"/>
                        <field name="margin"/>
                        <field name="list_price" widget="monetary" readonly="0" string="Nuevo Precio Venta"/>
                        <field name="change_price" readonly="0"/>
                    </tree>
                </field>
	      </page>
           </xpath> 
			    <!--</field>-->
        </field>
    </record>
</odoo>
