<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_commission_view_form" model="ir.ui.view">
            <field name="name">sale_commission_view_form</field>
            <field name="model">sale.commission</field>
            <field name="arch" type="xml">
                <form string="sale_commission_form">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="compute_commissions" string="Compute Commissions" type="object"
                                attrs="{'invisible':[('state','!=','draft')]}"/>
                        <button name="validate" string="Validate" type="object"
                                attrs="{'invisible':[('state','!=','draft')]}"/>
                        <button name="process" string="Process" type="object"
                                attrs="{'invisible':[('state','!=','pending')]}"/>
                        <button name="reset_draft" string="Reset to Draft" type="object"
                                attrs="{'invisible':[('state','!=','pending')]}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group col="4">
                            <field name="user_ids" widget="many2many_tags"/>
                            <field name="partner_ids" widget="many2many_tags"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <notebook>
                            <page string="Commission Summary">
                                <field name="commission_payment_amount_ids">
                                    <tree>
                                        <field name="paid_to"/>
                                        <field name="amount" sum="Commissions Summary"/>
                                        <field name="currency_id" invisible="True"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Sale Based Commissions">
                                <field name="commission_sale_ids" readonly="1">
                                    <tree>
                                        <field name="order_id"/>
                                        <field name="invoice_id"/>
                                        <field name="user_id"/>
                                        <field name="commission_percent"/>
                                        <field name="invoiced_amount" sum="Total Invoiced"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="amount" sum="Amount to Pay"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Payment Based Commissions">
                                <field name="commission_payment_ids" readonly="1">
                                    <tree>
                                        <field name="order_id"/>
                                        <field name="payment_id"/>
                                        <field name="user_id"/>
                                        <field name="commission_percent"/>
                                        <field name="paid_amount" sum="Total Collected"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="amount" sum="Amount to Pay"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Third Party Commissions">
                                <field name="commission_third_ids" readonly="1">
                                    <tree>
                                        <field name="order_id"/>
                                        <field name="invoice_id"/>
                                        <field name="partner_id"/>
                                        <field name="commission_percent"/>
                                        <field name="invoiced_amount" sum="Total Invoiced"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="amount" sum="Amount to Pay"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="sale_commission_view_tree" model="ir.ui.view">
            <field name="name">sale_commission_view_tree</field>
            <field name="model">sale.commission</field>
            <field name="arch" type="xml">
                <tree string="sale_commission_tree">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <record id="sale_commission_action" model="ir.actions.act_window">
            <field name="name">Sale Commission</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.commission</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
