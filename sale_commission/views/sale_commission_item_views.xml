<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="sale_commission_item_view_tree" model="ir.ui.view">
           <field name="name">sale_commission_item_view_tree</field>
           <field name="model">sale.commission.item</field>
           <field name="arch" type="xml">
               <tree string="sale_commission_item_view_tree" create="false" edit="false" delete="false">
                   <field name="order_id"/>
                   <field name="invoice_id"/>
                   <field name="payment_id"/>
                   <field name="user_id"/>
                   <field name="partner_id"/>
                   <field name="commission_percent"/>
                   <field name="invoiced_amount"/>
                   <field name="paid_amount"/>
                   <field name="amount"/>
                   <field name="state"/>
                   <field name="currency_id" invisible="1"/>
               </tree>
           </field>
       </record>

        <record id="sale_commission_item_view_form" model="ir.ui.view">
            <field name="name">sale_commission_item_view_form</field>
            <field name="model">sale.commission.item</field>
            <field name="arch" type="xml">
                <form string="sale_commission_item_form" create="false" edit="false" delete="false">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="order_id"/>
                            <field name="invoice_id"/>
                            <field name="payment_id"/>
                            <field name="user_id"/>
                            <field name="partner_id"/>
                            <field name="commission_percent"/>
                            <field name="invoiced_amount"/>
                            <field name="paid_amount"/>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

