<odoo>
    <data>

        <record id="inherit_account_move_form_view" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_outstanding_credits_debits_widget']" position="before">
                     <div style="width: 50%%">
                      <field name="tax_line_ids" force_save="1">
                            <tree create="false" edit="false" string="Taxes">
                                <field name="name"/>
                                <field name="account_id"/>
                                <field name="account_analytic_id" domain="[('company_id', '=', parent.company_id)]" groups="analytic.group_analytic_accounting"/>
                                <field name="tax_id" invisible="1"/>
                                <field name="sequence" invisible="1"/>
                                <field name="manual" invisible="1"/>
                                <field name="amount"/>
                                <field name="amount_rounding" invisible="1"/>
                                <field name="amount_total" invisible="1"/>
                                <field name="currency_id" invisible="1" force_save="1"/>
                            </tree>
                            <form>
                                <group col="4">
                                    <field name="name" />
                                    <field name="account_id" />
                                    <field name="amount" />
                                </group>
                            </form>
                        </field>
                     </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>