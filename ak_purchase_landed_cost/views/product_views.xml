<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_product_landed_cost_form" model="ir.ui.view">
            <field name="name">product.template.landed.cost.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='purchase']" position="inside">
                    <group name="duty" string="Duty" attrs="{'invisible':[('type', '=', 'service')]}">
                        <field name="duty_ok"/>
                        <field name="duty_pecent" attrs="{'invisible':[('duty_ok', '=', False)],'required':[('duty_ok', '=', True)]}"/>
                    </group>
                </xpath>
                <field name="split_method_landed_cost" position="after">
                    <field name="insurance_product_id" domain="[('landed_cost_ok','=',True)]" attrs="{'invisible':[('split_method_landed_cost', '!=', 'duty')]}"/>
                    <field name="freight_product_id" domain="[('landed_cost_ok','=',True)]" attrs="{'invisible':[('split_method_landed_cost', '!=', 'duty')]}"/>
                </field>
            </field>
        </record>

    </data>
</odoo>